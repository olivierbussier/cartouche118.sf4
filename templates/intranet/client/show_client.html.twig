{% extends 'base.html.twig' %}

{% block title %}Index des clients{% endblock %}

{% block header %}{% endblock %}

{% block main_page %}

    {% import 'macros/bouton.html.twig' as control %}
    {% import "macros/textAjax.html.twig" as ajax %}

    <div class="container">

        <div class="client_container">

            <div class="client_props">

               <h1>{{ client.fullName }} - {{ client.nom ~ ', ' ~ client.prenom }}</h1>

            </div>

            <div class="row">

                <div class="col">
                    {% for adresse in client.adresses %}
                        <div class="client_note">
                            <p>{{ adresse.nom }}</p>
                            <p>{{ adresse.adresse1 }}</p>
                            <p>{{ adresse.adresse2 }}</p>
                            <p>{{ adresse.codePostal }} {{ adresse.ville }}</p>
                            <p>{{ adresse.pays }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="col">
                    {% for telephone in client.telephones %}
                        <div class="client_note">
                            <p>{{ telephone.nom }}: {{ telephone.telephone }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="col">
                    {% for email in client.emails %}
                        <div class="client_note">
                            <p>{{ email.nom }}: {{ email.email }}</p>
                        </div>
                    {% endfor %}
                </div>

            </div>

            {% for note in client.notes %}
                <div class="client_note">
                    <p>{{ note.createdAt | date('d/m/Y') }}</p>
                    <p><pre>{{ note.text }}</pre></p>
                </div>
            {% endfor %}


            <div class="client_fact">
                {% for facture in client.commandes %}
                    <div class="col">
                        <a href="{{ path('view_commandes',{ref: facture.id}) }}" target="_blank">{{ facture.reference }}</a>
                        {{ facture.getPrixHT }} {{ facture.getPrixTTC }}
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
