<div class="modal fade" id="{{ id }}" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{ title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="zone-form">
                    <label for="nom" class="col-form-label form-control-sm">Nom</label>
                    <input name="nom" id="nom" class="form-control form-control-sm" type="text"
                           placeholder=""
                           value="{% if mail.nom is defined %}{{ mail.nom }}{% endif %}">

                    <label for="email" class="col-form-label form-control-sm">Adresse mail</label>
                    <input name="email" id="email" class="form-control form-control-sm" type="text"
                           placeholder="Entrez ici une adresse sous la forme xxx@yyy.zzz"
                           value="{% if mail.email is defined %}{{ mail.email }}{% endif %}">

                    {% if client is defined %}
                        <input type="hidden" name="client" value="{{ client.id }}">
                    {% endif %}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Abandonner</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"
                        data-url="{{ path('saveMail', { id: mailId }) }}"
                        onclick="{{ func }}(this)">Sauvegarder</button>
            </div>
        </div>
    </div>
</div>
