<div class="card h-100">
    <h5 class="card-header">
        <img src="{{ asset('/ico/email.svg') }}" alt="home" class="c118-big-btn">

        <button type="button" class="btn c118-small-btn" data-toggle="modal" data-target="#staticBackdrop_mailnew_{{ client.id }}">
            <img src="{{ asset('/ico/plus-circle.svg') }}" alt="edit"  class="button-edits c118-big-btn">
        </button>
    </h5>

    <div class="zone-new-edit">
        {{ include('intranet/client/mail/mailForm.html.twig', {
            id: 'staticBackdrop_mailnew_' ~ client.id,
            title: 'Ajouter une adresse mail',
            func: 'cSaveNew',
            mailId: 0
        }) }}
    </div>

    <div class="card-body">
        <div class="zone-old-edit">
            {% for mail in client.emails %}
                {{ include('intranet/client/mail/mailShow.html.twig', {mail: mail}) }}
            {% endfor %}
        </div>
    </div>
</div>
