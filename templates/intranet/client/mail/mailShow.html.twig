{% macro show_line(line,fNew = true) %}

    {% if line | length > 0 %}
        {{ line }}{% if fNew == true %}<br>{% endif %}
    {% endif %}

{% endmacro %}
<div class="zone-item-edit">
    <h6 class="card-title">

        <button type="button" class="btn c118-small-btn" data-toggle="modal" data-target="#staticBackdrop_mailedit_{{ mail.id }}">
            <img src="{{ asset('/ico/pencil-square.svg') }}" alt="edit"  class="button-edits">
        </button>

        {{ include('intranet/client/mail/mailForm.html.twig', {
            id: "staticBackdrop_mailedit_" ~ mail.id,
            title: 'Modifier une adresse mail',
            func: 'cSave',
            mailId: mail.id
        }) }}

        <img src="{{ asset('/ico/trash.svg') }}" alt="del" class="button-edits"
             data-url="{{ url('delMail', { id: mail.id }) }}"
             onclick="cDel(this)">
        {% if mail.label %}
            {{ mail.label }}
        {% else %}
            {{ mail.nom }}
        {% endif %}
    </h6>

    <div class="card-text">
        <a href="mailto:{{ mail.email }}">{{ mail.email }}</a>
    </div>
    <div class="card-text">&nbsp;</div>
</div>
