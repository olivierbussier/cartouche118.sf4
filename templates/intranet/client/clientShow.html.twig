<img src="{{ asset('/ico/pencil-square.svg') }}" alt="edit"  class="button-edits"
     data-url="{{ url('editClient', { id: client.id }) }}"
     onclick="cEditTitre(this)">
<img src="{{ asset('/ico/trash.svg') }}" alt="del"  class="button-edits"
     data-url="{{ url('delClient', { id: client.id }) }}"
     onclick="cDelTitre(this)">

{% if client.fullName | length == 0 %}
    {% if client.prenom or client.nom %}
        {{ client.nom ~ ' ' ~ client.prenom }}
    {% else %}
        {% if client.organization or client.titre %}
            {{ client.organization ~ ' ' ~ client.titre }}
        {% else %}
            [Aucune information disponible]
        {% endif %}
    {% endif %}
{% else %}
    {{ client.fullName }}
{% endif %}
