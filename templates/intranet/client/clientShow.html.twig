<img src="{{ asset('/ico/pencil-square.svg') }}" alt="edit"
     data-url="{{ url('editClient', { id: client.id }) }}"
     onclick="cEditTitre(this)">
<img src="{{ asset('/ico/trash.svg') }}" alt="del"
     data-url="{{ url('delClient', { id: client.id }) }}"
     onclick="cDelTitre(this)">
{% if client.fullName | length == 0 %}
    {{ client.nom ~ ' ' ~ client.prenom }}
{% else %}
    {{ client.fullName }} - ({{ client.prenom }} {{ client.nom }})
{% endif %}
