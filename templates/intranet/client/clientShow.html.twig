{% if client.fullName | length == 0 %}
    {% if client.prenom or client.nom %}
        {{ client.nom ~ ' ' ~ client.prenom }}
    {% else %}
        {% if client.organization or client.titre %}
            {{ client.organization ~ ' ' ~ client.titre }}
        {% else %}
            [Aucune information disponible]
        {% endif %}
    {% endif %}
{% else %}
    {{ client.fullName }}
{% endif %}
