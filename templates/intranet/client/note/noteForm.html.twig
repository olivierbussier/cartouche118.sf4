<div class="modal fade" id="{{ id }}" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{ title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="zone-form">
                    <label for="createdat" class="col-form-label form-control-sm">Date de cr√©ation</label>
                    <input name="createdat" id="createdat" class="form-control form-control-sm" type="date"
                           placeholder=""
                           value="{% if note.createdAt is defined %}{{ note.createdAt | date('Y-m-d') }}{% else %}{{ "now" | date('Y-m-d') }}{% endif %}">

                    <label for="text" class="col-form-label form-control-sm">Adr1</label>
                    <textarea class="form-control form-control-sm" name="text" id="text" rows="6">{% if note.text is defined %}{{ note.text | raw }}{% endif %}</textarea>

                    {% if client is defined %}
                        <input type="hidden" name="client" value="{{ client.id }}">
                    {% endif %}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Abandonner</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"
                        data-url="{{ path('saveNote', { id: noteId }) }}"
                        onclick="{{ func }}(this)">Sauvegarder</button>
            </div>
        </div>
    </div>
</div>
