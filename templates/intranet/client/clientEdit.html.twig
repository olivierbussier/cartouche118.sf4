     style="color:red"
     id="cancelClient_{{ client.id }}"
     data-url="{{ url('cancelClient',{ id: client.id  }) }}"
     data-receiver="#client_{{ client.id }}"
     onclick="cCancel('#cancelClient_{{ client.id }}')">
    {{ client.nom }}
</h6>
<p class="card-text">
<form id="formClient_{{ client.id }}">
