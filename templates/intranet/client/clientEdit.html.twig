
<img src="{{ asset('/ico/check.svg') }}"
     style="color:green"
     id="saveClient_{{ client.id }}"
     data-id="{{ client.id }}"
     data-form="#formClient_{{ client.id }}"
     data-url="{{ url('saveClient') }}"
     data-receiver="#client_{{ client.id }}"
     onclick="cSave('#saveClient_{{ client.id }}')">
