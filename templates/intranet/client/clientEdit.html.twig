<img src="{{ asset('/ico/check.svg') }}" xmlns="http://www.w3.org/1999/html"
     data-id="{{ client.id }}"
     data-form="#formClient_{{ client.id }}"
     data-url="{{ url('saveClient') }}"
     onclick="cSave(this)">
<img src="{{ asset('/ico/x-circle.svg') }}"
     data-url="{{ url('cancelClient',{ id: client.id  }) }}"
     onclick="cCancel(this)">
    {{ client.nom }}
</h6>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<p class="card-text">
<form id="formClient_{{ client.id }}">
    <label for="full" class="col-form-label form-control-sm">Nom commercial</label>
    <input name="full" id="full" class="form-control form-control-sm" type="text" placeholder="{{ client.id }}" value="{{ client.fullName }}"
           data-toggle="tooltip" data-placement="left" data-html="true"
           title="{{ "Pour une entreprise, renseignez ici le nom commercial de la structure, comme par exemple 'cartouche 118'<br>" ~
                 "Pour un particulier, laissez ce champ vide" | raw }}">

    <label for="nom" class="col-form-label form-control-sm">Nom / Raison sociale</label>
    <input name="nom" id="nom" class="form-control form-control-sm" type="text" placeholder="" value="{{ client.nom }}"
           data-toggle="tooltip" data-placement="left" data-html="true"
           title="{{ "Pour une entreprise, renseignez ici la raison commerciale de la structure, comme par exemple 'NPC Diffusion'<br>" ~
           "Pour un particulier, renseignez ici le nom de la personne" | raw }}">

    <label for="prenom" class="col-form-label form-control-sm">Prénom / Nom complet</label>
    <input name="prenom" id="prenom" class="form-control form-control-sm" type="text" placeholder="" value="{{ client.prenom }}"
           data-toggle="tooltip" data-placement="left" data-html="true"
           title="{{ "Pour une entreprise, renseignez ici le nom complet du contact, comme par exemple 'Nicolas Bréchignac'<br>" ~
           "Pour un particulier, renseignez le prénom de la personne" | raw }}">
</form>
