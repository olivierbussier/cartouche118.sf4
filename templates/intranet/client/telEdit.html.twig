<h6 class="card-title">
    <img src="{{ asset('/ico/check.svg') }}"
         style="color:green"
         id="saveTel_{{ telephone.id }}"
         data-id="{{ telephone.id }}"
         data-form="#formTel_{{ telephone.id }}"
         data-url="{{ url('saveTel') }}"
         data-receiver="#tel_{{ telephone.id }}"
         onclick="cSave('#saveTel_{{ telephone.id }}')">
    <img src="{{ asset('/ico/x-circle.svg') }}"
         style="color:red"
         id="cancelTel_{{ telephone.id }}"
         data-url="{{ url('cancelTel',{ id: telephone.id  }) }}"
         data-receiver="#tel_{{ telephone.id }}"
         onclick="cCancel('#cancelTel_{{ telephone.id }}')">
    {{ telephone.nom }}
</h6>
<p class="card-text">
<form id="formTel_{{ telephone.id }}">
    <label for="nom" class="col-form-label form-control-sm">Nom</label>
    <input name="nom" id="nom" class="form-control form-control-sm" type="text" placeholder="" value="{{ telephone.nom }}">

    <label for="label" class="col-form-label form-control-sm">Label</label>
    <input name="label" id="label" class="form-control form-control-sm" type="text" placeholder="" value="{{ telephone.label }}">

    <label for="telephone" class="col-form-label form-control-sm">Téléphone</label>
    <input name="telephone" id="telephone" class="form-control form-control-sm" type="text" placeholder="Entrez-ici le numéro" value="{{ telephone.telephone }}">

    {% if client is defined %}
        <input type="hidden" name="client" value="{{ client }}">
    {% endif %}
</form>
