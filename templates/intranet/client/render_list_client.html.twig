{% import "macros/pagination.html.twig" as pages %}

{% if nbPages > 1 %}
    <nav aria-label="NavClients">
        {{ pages.pages(nbPages, currentPage, term) }}
    </nav>
{% endif %}

{% for client in clients %}

    <div class="client_container">

        <div class="client_props">

           <a href="{{ path('show_client', {id: client.id}) }}"> - {{ client.fullName }} - {{ client.nom ~ ', ' ~ client.prenom }}</a>

        </div>

        {% for note in client.notes %}
            <div class="client_note">
                <p>{{ note.createdAt | date('d/m/Y') }}</p>
                <p><pre>{{ note.text }}</pre></p>
            </div>
        {% endfor %}


        <div class="client_fact">
            {% for facture in client.commandes %}
                <div class="col">
                    <a href="{{ path('view_commandes',{ref: facture.id}) }}">{{ facture.reference }}</a>
                    {{ facture.getPrixHT }} {{ facture.getPrixTTC }}
                </div>
            {% endfor %}
        </div>

    </div>

{% endfor %}



